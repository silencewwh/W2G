{
  "manifest_version": 3,
  "name": "W2G Extension",
  "version": "1.0",
  "description": "Watch Together Extension with iframe breaking capability",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "W2G"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["proxy.js"],
      "world": "MAIN",
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "world": "ISOLATED",
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "assets/*", "src/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
